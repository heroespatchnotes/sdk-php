{
	"name": "tatter/heroes-sdk",
	"description": "PHP SDK for Heroes of the Storm",
	"keywords": [
		"blizzard",
		"heroes",
		"storm",
		"hots",
		"sdk",
		"php"
	],
	"homepage": "https://github.com/tattersoftware/heroes-sdk-php",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MGatner/heroes-data"
        }
	],
	"require": {
		"php": "^7.3 || ^8.0",
        "heroestoolchest/heroes-data": "dev-nexus"
	},
	"require-dev": {
		"fakerphp/faker": "^1.9",
		"phpstan/phpstan": "^0.12",
		"phpunit/phpunit": "^9.0"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Heroes\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"analyze": "phpstan analyze",
		"test": "phpunit"
	}
}
